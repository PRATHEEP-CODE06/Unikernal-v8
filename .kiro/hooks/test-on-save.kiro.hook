{
  "enabled": true,
  "name": "Run Tests on Save",
  "description": "Automatically runs npm test with --runInBand flag whenever any file under kernel/ or adapters/ directories is saved, and displays the test output",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "kernel/**/*",
      "adapters/**/*"
    ]
  },
  "then": {
    "type": "runCommand",
    "command": "npm test -- --runInBand"
  }
}